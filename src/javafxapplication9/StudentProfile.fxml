<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #ffffff;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="javafxapplication9.StudentProfileController">
    
    <!-- Title -->
    <Label layoutX="30" layoutY="20" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Student Profile" />

    <!-- Profile Picture -->
    <ImageView fx:id="imageProfile" fitHeight="120" fitWidth="120" layoutX="30" layoutY="70" style="-fx-border-color: black;" />

    <!-- Name -->
    <Label layoutX="200" layoutY="70" style="-fx-font-weight: bold;" text="Name:" />
    <Label fx:id="lblName" layoutX="300" layoutY="70" prefHeight="18.0" prefWidth="230.0" />

    <!-- Email -->
    <Label layoutX="200" layoutY="110" style="-fx-font-weight: bold;" text="Email:" />
    <Label fx:id="lblEmail" layoutX="300" layoutY="110" prefHeight="18.0" prefWidth="230.0" />

    <!-- Contact -->
    <Label layoutX="200" layoutY="150" style="-fx-font-weight: bold;" text="Contact:" />
    <Label fx:id="lblContact" layoutX="300" layoutY="150" prefHeight="18.0" prefWidth="230.0" />

    <!-- Address -->
    <Label layoutX="200" layoutY="190" style="-fx-font-weight: bold;" text="Address:" />
    <TextArea fx:id="lblAddress" editable="false" layoutX="300" layoutY="190" prefHeight="60" prefWidth="250" wrapText="true" />

    <!-- Selected Subjects -->
    <Label layoutX="200" layoutY="270" style="-fx-font-weight: bold;" text="Selected Subjects:" />
    <Label fx:id="lblSubjects" layoutX="350" layoutY="270" prefHeight="18.0" prefWidth="230.0" wrapText="true" />

    <!-- Education -->
    <Label layoutX="200" layoutY="310" style="-fx-font-weight: bold;" text="Education:" />
    <Label fx:id="lblEducation" layoutX="300" layoutY="310" prefHeight="18.0" prefWidth="230.0" wrapText="true" />

    <!-- Bio -->
    <Label layoutX="200" layoutY="350" style="-fx-font-weight: bold;" text="Bio:" />
    <TextArea fx:id="lblBio" editable="false" layoutX="300" layoutY="350" prefHeight="80" prefWidth="350" wrapText="true" />

    <!-- Optional: Edit Profile -->
    <Button fx:id="btnEditProfile" layoutX="300" layoutY="460" text="Back" />

</AnchorPane>
